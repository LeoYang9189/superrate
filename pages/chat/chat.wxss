page {
  background: #F6F6F6;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.custom-navigation-bar {
  background: #FFFFFF;
  padding-top: env(safe-area-inset-top);
}

.navigation-bar-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.left-actions {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 32rpx;
}

.back-icon {
  padding: 10rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}

.back-icon image {
  width: 40rpx;
  height: 40rpx;
}

.navigation-bar-title {
  font-size: 32rpx;
  color: #333333;
}

.right-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.right-actions image {
  width: 48rpx;
  height: 48rpx;
}

/* 聊天区域样式 */
.chat-container {
  height: calc(100vh - 44px - env(safe-area-inset-top));
  padding: 24rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.timestamp {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin: 16rpx 0;
}

.message-item {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx 12rpx 12rpx 4rpx;
  font-size: 28rpx;
  color: #333333;
  word-break: break-all;
  position: relative;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.message-content.link {
  color: #1296db;
}

.message-content::before {
  content: '';
  position: absolute;
  left: -8rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-right: 8rpx solid #FFFFFF;
}

/* 底部区域样式 */
.footer {
  background: #F8F8F8;
  border-top: 1rpx solid #EEEEEE;
}

/* 快捷功能区 */
.quick-actions {
  display: flex;
  justify-content: flex-start;
  padding: 16rpx 24rpx;
  gap: 16rpx;
  background: #F6F6F6;
}

.quick-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.quick-item .small-icon {
  width: 28rpx;
  height: 28rpx;
}

.quick-item text {
  font-size: 22rpx;
  color: #333333;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  gap: 16rpx;
  background: #F8F8F8;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  width: calc(100% - 240rpx);
}

.voice-icon,
.emoji-icon,
.plus-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.voice-icon image,
.emoji-icon image,
.plus-icon image {
  width: 48rpx;
  height: 48rpx;
}

/* 工具栏样式 */
.toolbar {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.tool-item image {
  width: 48rpx;
  height: 48rpx;
}

.tool-item text {
  font-size: 20rpx;
  color: #666666;
} 