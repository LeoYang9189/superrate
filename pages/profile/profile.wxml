<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <!-- 用户信息区域 -->
  <view class="user-info">
    <view class="user-basic">
      <image class="avatar" src="/assets/icons/avatar1.png" mode="aspectFill"></image>
      <text class="username">Leo Yang</text>
    </view>
  </view>

  <!-- 用户中心功能区 -->
  <view class="function-area">
    <view class="function-item">
      <image src="/assets/icons/track.png" mode="aspectFit"></image>
      <text>订单跟踪</text>
    </view>
    <view class="function-item">
      <image src="/assets/icons/quote.png" mode="aspectFit"></image>
      <text>我的报价</text>
    </view>
    <view class="function-item">
      <image src="/assets/icons/subscribe.png" mode="aspectFit"></image>
      <text>运价订阅</text>
    </view>
  </view>

  <!-- 专属客服卡片 -->
  <view class="service-card">
    <view class="service-info">
      <image class="service-avatar" src="/assets/icons/service-vip.png" mode="aspectFit"></image>
      <view class="service-detail">
        <text class="service-name">我的专属客服</text>
        <text class="service-desc">一对一为您服务</text>
      </view>
    </view>
    <view class="contact-area">
      <image class="qrcode-icon" src="/assets/icons/qrcode.png" mode="aspectFit"></image>
      <image class="arrow-right" src="/assets/icons/arrow-right-white.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 企业认证入口 -->
  <view class="verify-entry">
    <view class="verify-info">
      <image class="verify-icon" src="/assets/icons/verify.png" mode="aspectFit"></image>
      <text class="company-name">上海沃特国际货运代理有限公司</text>
      <image class="verify-success" src="/assets/icons/verify-success.png" mode="aspectFit"></image>
    </view>
    <image class="arrow-icon" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
  </view>
</view>

<!-- 添加自定义导航栏 -->
<view class="custom-navigation-bar">
  <view class="navigation-bar-content">
    <text class="navigation-bar-title">我的</text>
  </view>
</view>