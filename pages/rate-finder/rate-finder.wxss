/* 页面容器 */
.rate-finder {
  min-height: 100vh;
  background: #F5F7FA;
  padding-top: 176rpx;  /* 导航栏高度 + 状态栏高度 */
}

/* 自定义导航栏 */
.custom-navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  z-index: 100;
  padding-top: 88rpx;  /* 状态栏高度 */
}

.navigation-bar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.back-icon image {
  width: 48rpx;
  height: 48rpx;
}

.navigation-bar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

/* 查询表单 */
.search-form {
  margin: 24rpx;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.port-value {
  font-size: 32rpx;
  color: #333333;
}

.port-value.placeholder {
  color: #999999;
}

.search-btn {
  margin-top: 48rpx;
  background: #1296db;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.subscribe-tip {
  margin-top: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.subscribe-link {
  color: #1296db;
  margin-left: 8rpx;
}

/* 历史记录 */
.history-section {
  margin: 24rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.clear-btn {
  font-size: 28rpx;
  color: #999999;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.history-item:last-child {
  border-bottom: none;
}

.route-text {
  font-size: 28rpx;
  color: #333333;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 12rpx;
}

/* 添加港口选择弹窗样式 */
.port-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 24rpx;
  max-height: 70vh;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999999;
}

.port-list {
  max-height: calc(70vh - 100rpx);
  overflow-y: auto;
}

.port-item {
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #EEEEEE;
}

.port-item:last-child {
  border-bottom: none;
} 